@model AppointmentData.Models.AssignServiceModel

@using (Html.BeginForm("AssignService", "Service", FormMethod.Post))
{
    <div class="form-group">
        <label for="serviceId">Select Service:</label>
        @Html.DropDownListFor(model => model.ServiceID, new SelectList(Model.Services, "ServiceID", "ServiceName"), "Select a Service", new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="serviceProviderId">Select Service Provider:</label>
        @Html.DropDownListFor(model => model.ServiceProviderID, new SelectList(Model.ServiceProviders, "ServiceProviderID", "ServiceProviderName"), "Select a Service Provider", new { @class = "form-control", required = "required" })
    </div>
    <button type="submit" class="btn btn-primary mt-3">Assign Service</button>
}
